// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  @@map("users")
}

model Categorys {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  tests       Tests[]
  disciplines Disciplines[]

  @@map("categories")
}

model Tests {
  id                  Int                 @id @default(autoincrement())
  name                String
  pdfUrl              String
  category            Categorys           @relation(fields: [categoryId], references: [id])
  categoryId          Int
  teachersDiscipline  TeachersDisciplines @relation(fields: [teacherDisciplineId], references: [id])
  teacherDisciplineId Int

  @@map("tests")
}

model TeachersDisciplines {
  id           Int         @id @default(autoincrement())
  teacher      Teachers    @relation(fields: [teacherId], references: [id])
  teacherId    Int
  discipline   Disciplines @relation(fields: [disciplineId], references: [id])
  disciplineId Int
  tests        Tests[]

  @@unique(fields: [teacherId, disciplineId], name: "teacher_discipline")
  @@map("teachersDisciplines")
}

model Teachers {
  id                 Int                   @id @default(autoincrement())
  name               String                @unique
  teachersDiscipline TeachersDisciplines[]

  @@map("teachers")
}

model Disciplines {
  id                Int                   @id @default(autoincrement())
  name              String                @unique
  term              Terms                 @relation(fields: [termId], references: [id])
  termId            Int
  teachersDscipline TeachersDisciplines[]
  categories        Categorys[]

  @@map("disciplines")
}

model Terms {
  id         Int           @id @default(autoincrement())
  number     Int           @unique
  discipline Disciplines[]

  @@map("terms")
}
